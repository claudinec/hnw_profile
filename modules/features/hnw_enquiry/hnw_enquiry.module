<?php/** * @file * Enquiry form for specific products and general contact. * * 1. General 'Contact Us' page. * 2. Form on product detail nodes with parameters relevant to products. *//** * @todo * Implementation of hook_admin(). * * Set recipient addresses here. * Validate email address? */function hnw_enquiry_admin() {  $form = array();  $form['hnw_enquiry_address'] = array(    '#type' => 'textfield',    '#default_value' => variable_get('hnw_enquiry_address'),    '#title' => 'Recipient email address',    '#required' => TRUE,  );  return system_settings_form($form);}/** * @todo * Implementation of hook_menu(). */function hnw_enquiry_menu() {  $items = array();    $items['admin/config/enquiry'] = array(    'title' => 'Enquiry form settings',    'description' => 'Enquiry form settings',    'page callback' => drupal_get_form(),    'page arguments' => array('hnw_enquiry_admin'),    'access arguments' => array('administer enquiry form settings'),    'type' => MENU_NORMAL_ITEM,  );    $items['enquiry'] = array(    'title' => 'Enquiry form',    'description' => 'Enquiry form',    'page callback' => drupal_get_form(),    'page arguments' => array('hnw_enquiry_form_build'),    'access arguments' => array('access enquiry form'),    'type' => MENU_NORMAL_ITEM,    'menu_name' => 'main-menu',  );    return $items;}/** * Implements hook_permission(). */function hnw_enquiry_permission() {  'access enquiry form' => array(    'title' => t('Access enquiry form')),  'administer enquiry form settings' => array(    'title' => t('Access enquiry form settings')),}/** * Implements hook_form(). */function hnw_enquiry_form() {  return drupal_get_form('hnw_enquiry_form_build');}/** * Build enquiry form. */function hnw_enquiry_form_build($form, &$form_state) {  $form['product'] = array(    '#type' => 'textfield',    '#title' => 'Are you enquiring about a particular product?',  );  $form['name'] = array(    '#type' => 'textfield',    '#title' => 'Name',    '#required' => TRUE,  );  $form['email'] = array(    '#type' => 'textfield',    '#title' => 'Email address',    '#required' => TRUE,  );  $form['country'] = array(    '#type' => 'select',    '#title' => 'Country',    '#default_value' => 1,    '#options' => array(      1 => 'Australia',      2 => 'New Zealand',      3 => 'Asia/Pacific',      4 => 'Other',    ),    '#required' => TRUE,  );    $form['enquiry'] = array(    '#type' => 'textarea',    '#title' => 'Enquiry',    '#required' => TRUE,  );    $form['submit'] = array(    '#type' => 'submit',    '#title' => 'Submit',    '#submit' => array('hnw_enquiry_submit'),  );  return $form;}/** * @todo * Process enquiry form. */function hnw_enquiry_submit($form, &$form_state) {}/** * @todo * Build a view of archived messages. */